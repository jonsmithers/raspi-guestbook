{
  "env": {
    "node": true,
    "browser":  false,
    "es6":      true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent":          [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes":          [ 0, "single" ],
    "semi":            [ "error", "always" ],
    "no-unused-vars":  [ "warn" ],
    "no-constant-condition": [0],
    "no-console":      [ 0 ]
  }
}